{
  "manifest_version": 2,
  "name": "CMS Github Crosslinker",
  "description": "Adds links to the CMSSW source code on Github",
  "version": "0.2.0",
  "author": "Matthias Wolf",
  "license": "MIT",

  "content_scripts": [
    {
      "matches": ["*://*.github.com/*/cmssw/*.py*"],
      "js": ["zepto.min.js", "add-py-links.js"]
    },
    {
      "matches": [
        "*://*.github.com/*/cmssw/*.cc*",
        "*://*.github.com/*/cmssw/*.h*"
      ],
      "js": ["zepto.min.js", "add-cpp-links.js"]
    }
  ]
}
